{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "max-len": ["error", { "code": 100 }],
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "comma-dangle": ["error", "never"],
        "object-curly-spacing": ["error", "always"],
        "arrow-parens": ["error", "as-needed"],
        "linebreak-style": 0
    }
}
